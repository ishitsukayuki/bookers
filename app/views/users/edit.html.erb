<div class="body">
	<div class="container">
		<h2>User info</h2>
		<div class="form-body">
		<%= form_for(@user) do |f| %>
			<% if @user.errors.any? %>
			<h2><%= @user.errors.count %>error prohibited this obj form being saved:</h2>
			<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		<% end %>
			<div class="field">
				<label>Name</label>
				<%= f.text_field :name, class: "name" %>
			</div>
			<div class="field">
				<label>Image</label>
				<%= f.attachment_field :profile_image, class: "user_image" %>
			</div>
			<div class="field">
				<label>Introduction</label>
				<%= f.text_area :profile, class: "Introduction" %>
			</div>
			<div class="actions">
				<%= f.submit "Update User" %>
			</div>
		<% end %>
		</div>
	</div>
</div>