<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
		<table class="table">
			<tbody>
				<tr>
					<th>name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= @user.profile %></th>
				</tr>
			</tbody>
		</table>
		<div class=row>
			<% if @user.id == current_user.id %>
			<%= link_to "", edit_user_path, class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
			<% end %>
		</div>
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
			<div class="field row">
				<label>Title</label>
				<%= f.text_field :book_title, class: "col-xs-12 book_title" %>
			</div>
			<div class="field row">
				<label>Opinion</label>
				<%= f.text_area :book_body, class: "col-xs-12 book_body" %>
			</div>
			<div class="actions row">
				<%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
			</div>
		<% end %>
	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
						</td>
						<td>
							<%= link_to book.book_title, book_path(book.id), class: "book_#{book.id}" %>
						</td>
						<td>
							<%= book.book_body %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
