<div id="error_explanation">
	<% if book.errors.any? %>
		<h2><%= book.errors.count %>error prohibited this obj form being saved:</h2>
		<ul>
			<% book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>
</div>
<div class="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
	<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.profile %></th>
			</tr>
		</tbody>
		</table>
		<div class="row">
			<%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
		</div>
		<h2>New book</h2>
		<%= form_for(book) do |f| %>
			<div class="field row">
				<label>Title</label>
				<%= f.text_field :book_title, class: "col-xs-12 book_title" %>
			</div>
			<div class="field row">
				<label>Opinion</label>
				<%= f.text_area :book_body, class: "col-xs-12 book_body" %>
			</div>
			<div class="actions row">
				<%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
			</div>
		<% end %>
</div>