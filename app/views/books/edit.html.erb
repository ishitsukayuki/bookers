<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
		<div id="error_explanation">
			<% if @book.errors.any? %>
				<h2><%= @book.errors.count %>error prohibited this obj form being saved:</h2>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
			<% end %>
		</div>
		<%= form_for(@book) do |f| %>
			<div class="field row">
				<label>Title</label>
				<%= f.text_field :book_title, class: "col-xs-12 book_title" %>
			</div>
			<div class="field row">
				<label>Opinion</label>
				<%= f.text_area :book_body, class: "col-xs-12 book_body" %>
			</div>
			<div class="actions row">
				<%= f.submit "Update Book", class: "btn btn-primary col-xs-12" %>
			</div>
		<% end %>
		<%= link_to "Show", book_path(@book), class: "book_#{@book.id}" %>|
		<%= link_to "Back", books_path(@books), class: "back" %>
	</div>
</div>