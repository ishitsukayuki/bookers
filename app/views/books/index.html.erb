<div class="row">
	<%= render 'books/list', book: @book, user: @book.user %>
	<div class="col-xs-9">
		<h2>Books</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>
			<tbody>
				<% if @books.present? %>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= attachment_image_tag book.user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
						</td>
						<td>
							<%= link_to book.book_title, book_path(book.id), class: "book_#{book.id}" %>
						</td>
						<td>
							<%= book.book_body %>
						</td>
					</tr>
				<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
